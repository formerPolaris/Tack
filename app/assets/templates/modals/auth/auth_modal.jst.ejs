<div class="modal-content">
  <div class="modal-header">
    <h4 class="modal-title text-center" id="myModalLabel">Sign In</h4>
  </div>
  <div class="modal-body">
    <div class="row">
      <p class="col-xs-12 col-md-10 col-md-offset-1"><%= message %></p>
    </div>
    <br>
    <form class="auth-modal-creds row" role="form">
      <div class="form-group col-md-offset-2 col-md-8">
      <strong>E-mail</strong>
        <input type="text" class="form-control modal-email-input" placeholder="<%= attemptedEmail %>">
      </div>
      <div class="form-group col-md-offset-2 col-md-8">
      <strong>Password</strong>
        <input type="password" class="form-control modal-password-input">
      </div>
      <div class="form-group col-md-offset-2 col-md-8">
      <strong>Confirm Password (Only if you're signing up!)</strong>
        <input type="password" class="form-control modal-password-confirm">
      </div>
    </form>
  </div>
  <div class="modal-footer">
    Blah
  </div>
</div>